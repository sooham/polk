.header {
  margin-bottom: 2em;
  padding: 0 20px;

  .blog-title {
    font-family: 'Bebas Neue', 'Impact', sans-serif;
    font-size: 2.8em;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    text-align: center;
    padding-top: 0.5em
  }

  .subtitle {
    font-family: 'Work Sans', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: gray;
  }

  .menu {
    margin: 0;
    padding: 0;
    border-top: 1px solid #ccc;
    margin-top: 20px;

    .menu-item {
      margin: 0 15px 0 0;
      padding: 3px 0 3px 0;
      float: left;
      display: inline-block;
    }

    .menu-item-link {
      font-family: 'Work Sans', sans-serif;
      font-weight: 600;
      color: #999;

      &:hover {
        color: #000;
      }
    }
  }
}