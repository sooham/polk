// ============================================
// Header - Basquiat Raw Street Art Aesthetic
// ============================================

.basquiat-header
  background var(--bg-cream, #faf8f3)
  position relative
  z-index 100

.header-container
  max-width 960px
  margin 0 auto
  padding 1.5rem 2rem
  display flex
  justify-content space-between
  align-items center
  gap 1.5rem

.blog-title
  flex-shrink 0

.logo
  display inline-flex
  align-items center
  gap 0.5rem
  text-decoration none
  color var(--text-ink, #2c2824)
  transition all 0.3s ease

  &:hover
    transform rotate(-1deg)

    .logo-crown
      animation crown-bounce-header 0.5s ease infinite

    .logo-text
      color var(--accent-terracotta, #c45d3a)

.logo-crown
  transform rotate(-5deg)
  filter drop-shadow(1px 1px 0 var(--text-ink, #2c2824))
  transition all 0.3s ease

@keyframes crown-bounce-header
  0%, 100%
    transform rotate(-5deg) translateY(0)
  50%
    transform rotate(-2deg) translateY(-2px)

.logo-text
  font-family var(--font-hand, 'Bebas Neue', 'Impact', sans-serif)
  font-size 1.6rem
  font-weight 400
  letter-spacing 2px
  text-transform uppercase
  transition color 0.3s ease

.navbar
  flex 1

.menu
  display flex
  justify-content flex-end
  align-items center
  gap 0.3rem
  list-style none
  margin 0
  padding 0

.menu-item
  position relative

.menu-item-link
  font-family var(--font-hand, 'Bebas Neue', 'Impact', sans-serif)
  font-size 1.1rem
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  color var(--text-light, #6b6359)
  text-decoration none
  padding 0.5rem 0.8rem
  position relative
  transition all 0.3s ease

  &::before
    content ''
    position absolute
    bottom 4px
    left 10%
    right 10%
    height 2px
    background var(--accent-terracotta, #c45d3a)
    transform scaleX(0) rotate(-1deg)
    transition transform 0.3s ease
    border-radius 2px

  &:hover
    color var(--text-ink, #2c2824)
    transform rotate(-1deg)

    &::before
      transform scaleX(1) rotate(-1deg)

  &.active
    color var(--text-ink, #2c2824)

    &::before
      transform scaleX(1) rotate(-1deg)
      background var(--accent-sage, #6b8f71)

// Decorative bottom border
.header-border
  height 4px
  background repeating-linear-gradient(90deg,
    var(--text-ink, #2c2824) 0, var(--text-ink, #2c2824) 8px,
    transparent 8px, transparent 16px,
    var(--accent-mustard, #d4a84b) 16px, var(--accent-mustard, #d4a84b) 22px,
    transparent 22px, transparent 30px)
  opacity 0.4

// ============================================
// Responsive
// ============================================

@media (max-width: 600px)
  .header-container
    flex-direction column
    gap 1rem
    padding 1.2rem 1.5rem

  .logo-text
    font-size 1.4rem

  .menu
    justify-content center
    gap 0.2rem
    flex-wrap wrap

  .menu-item-link
    font-size 0.95rem
    padding 0.4rem 0.6rem

@media (max-width: 400px)
  .menu-item-link
    font-size 0.85rem
    padding 0.3rem 0.5rem
    letter-spacing 0.5px
