  50%
    opacity 0.6
    transform scale(1.2)

.timeline-content
  font-family var(--font-sketch)
  transition all 0.2s ease
  position relative

.timeline-item.current .timeline-content
  border-left-color var(--accent-terracotta)

.badge.sketchy
  font-family var(--font-hand)
  font-size 0.85rem
  background var(--accent-sage)
  color white
  padding 2px 10px
  border-radius 3px
  transform rotate(-2deg)
  display inline-block

@keyframes slide-in-left
  from
    opacity 0
    transform translateX(-20px)
  to
    opacity 1
    transform translateX(0)

// ============================================
// Education Card - Basquiat Collage Style
// ============================================

.education-card.sketchy-box
  display flex
  align-items center
  gap 2rem
  padding 2rem 2.5rem 2rem 2rem
  background var(--bg-paper)
  border 3px solid var(--text-pencil)
  border-radius 12px
  position relative
  transform rotate(-0.5deg)
  box-shadow 6px 6px 0 var(--border-sketch)
  transition all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)
  overflow visible
  min-height 160px

  // Raw painted strokes as background
  &::before
    content ''
    position absolute
    top 10px
    right 15px
    width 180px
    height 4px
    background var(--accent-mustard)
    opacity 0.15
    transform rotate(-2deg)
    border-radius 2px

  &::after
    content ''
    position absolute
    bottom 20px
    left 20px
    width 120px
    height 3px
    background var(--accent-terracotta)
    opacity 0.12
    transform rotate(3deg)
    border-radius 2px

  &:hover
    transform rotate(0deg) translateY(-4px) scale(1.01)
    box-shadow 10px 10px 0 var(--border-sketch)
    border-color var(--accent-terracotta)

.school-logo-wrapper
  position relative
  flex-shrink 0
  // Break out of container
  margin-left -30px
  margin-top -20px
  margin-bottom -20px
  z-index 2

.school-logo
  width 180px
  height 180px
  object-fit contain
  // Remove border to let graphic breathe
  border none
  // Layered shadow for depth
  filter drop-shadow(8px 8px 0 var(--accent-mustard)) drop-shadow(12px 12px 0 var(--border-sketch))
  transform rotate(-8deg)
  transition all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)
  display block

.education-card:hover .school-logo
  transform rotate(-2deg) scale(1.08)
  filter drop-shadow(10px 10px 0 var(--accent-terracotta)) drop-shadow(16px 16px 0 var(--accent-mustard))

.basquiat-accent
  position absolute
  bottom -12px
  right -12px
  width 45px
  height 45px
  background var(--accent-terracotta)
  border 4px solid var(--text-pencil)
  border-radius 50%
  display flex
  align-items center
  justify-content center
  font-family var(--font-hand)
  font-size 1.6rem
  font-weight 700
  color var(--bg-cream)
  transform rotate(25deg)
  box-shadow 3px 3px 0 var(--text-pencil)
  z-index 3
  transition all 0.3s ease

  &::before
    content ''
    position absolute
    top -5px
    left -5px
    right -5px
    bottom -5px
    border 2px dashed var(--accent-mustard)
    border-radius 50%
    pointer-events none
    opacity 0.6
    animation spin-slow 20s linear infinite reverse

  .education-card:hover &
    transform rotate(35deg) scale(1.1)
    background var(--accent-sage)

// Scribbled annotations - Basquiat style
.edu-annotation
  position absolute
  font-family var(--font-hand)
  font-size 0.85rem
  color var(--text-pencil)
  opacity 0.2
  pointer-events none
  text-transform uppercase
  letter-spacing 0.5px
  transform rotate(-5deg)
  top 15px
  right 25px
  z-index 1

.edu-details
  display flex
  flex-direction column
  gap 0.5rem
  flex 1
  position relative
  z-index 1

.school
  font-family var(--font-hand)
  font-weight 400
  color var(--text-ink)
  font-size 2rem
  letter-spacing 2px
  text-transform uppercase
  line-height 1.1
  position relative

  // Underline accent
  &::after
    content ''
    position absolute
    bottom -4px
    left 0
    width 60%
    height 4px
    background var(--accent-mustard)
    opacity 0.4
    transform rotate(-1deg)
    border-radius 2px

.degree
  font-family var(--font-sketch)
  color var(--text-light)
  font-size 1.15rem
  font-weight 500
  line-height 1.4

.year
  font-family var(--font-sketch)
  color var(--text-light)
  font-size 1.05rem
  font-style italic
  opacity 0.75
  margin-top 0.2rem

// ============================================
// Interests Tags
// ============================================

.interests-grid
  display flex
  flex-wrap wrap
  gap 1rem

.interest-tag.sketchy-tag
  font-family var(--font-hand)
  font-size 1.1rem
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  background var(--bg-paper)
  color var(--text-pencil)
  padding 0.7rem 1.4rem
  border 2px solid var(--text-pencil)
  border-radius 20px
  transform rotate(var(--rotation, -1deg))
  transition all 0.3s ease
  cursor default
  position relative
  box-shadow 2px 2px 0 var(--border-sketch)

  &:nth-child(1) { --rotation: -1.5deg }
  &:nth-child(2) { --rotation: 0.8deg }
  &:nth-child(3) { --rotation: -0.5deg }
  &:nth-child(4) { --rotation: 1.2deg }
  &:nth-child(5) { --rotation: -0.8deg }
  &:nth-child(6) { --rotation: 0.5deg }

  &:hover
    transform rotate(0deg) scale(1.05)
    border-color var(--accent-terracotta)
    color var(--accent-terracotta)
    box-shadow 4px 4px 0 var(--border-sketch)

// ============================================
// Skills Tags
// ============================================

.skills-grid
  display flex
  flex-wrap wrap
  gap 0.8rem

.skill-tag
  font-family var(--font-mono-hand)
  font-size 0.9rem
  font-weight 400
  background transparent
  color var(--text-pencil)
  padding 0.5rem 1rem
  border 1px dashed var(--text-pencil)
  border-radius 4px
  transition all 0.2s ease
  position relative

  &::before
    content '< '
    opacity 0.4

  &::after
    content ' />'
    opacity 0.4

  &:hover
    border-style solid
    background var(--bg-paper)
    transform translateY(-2px)

// ============================================
// Project Cards
// ============================================

.projects-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(280px, 1fr))
  gap 2rem

.project-card.sketchy-box
  display block
  padding 2rem
  background var(--bg-paper)
  border 2px solid var(--text-pencil)
  border-radius 8px
  text-decoration none
  color inherit
  position relative
  transform rotate(var(--card-rotate, -0.5deg))
  box-shadow 5px 5px 0 var(--border-sketch)
  transition all 0.3s ease
  overflow visible

  &:first-child
    --card-rotate: -0.5deg

  &:last-child
    --card-rotate: 0.8deg

  // Corner decorations
  .card-corner
    position absolute
    width 12px
    height 12px
    border-color var(--accent-terracotta)
    opacity 0
    transition opacity 0.3s ease

    &.top-left
      top -2px
      left -2px
      border-top 2px solid
      border-left 2px solid

    &.top-right
      top -2px
      right -2px
      border-top 2px solid
      border-right 2px solid

    &.bottom-left
      bottom -2px
      left -2px
      border-bottom 2px solid
      border-left 2px solid

    &.bottom-right
      bottom -2px
      right -2px
      border-bottom 2px solid
      border-right 2px solid

  &:hover
    transform rotate(0deg) translateY(-4px)
    box-shadow 8px 8px 0 var(--border-sketch)
    border-color var(--accent-terracotta)

    .card-corner
      opacity 1

    .card-arrow
      transform translateX(4px)
      color var(--accent-terracotta)

  h3
    font-family var(--font-hand)
    margin 0 0 0.8rem
    font-size 1.7rem
    font-weight 400
    letter-spacing 1px
    text-transform uppercase
    color var(--text-ink)

  p
    font-family var(--font-sketch)
    margin 0 0 1.2rem
    color var(--text-light)
    font-size 1rem
    font-weight 500
    line-height 1.6

.card-arrow
  font-family var(--font-hand)
  font-size 1rem
  color var(--text-light)
  display inline-flex
  align-items center
  gap 0.5rem
  transition all 0.3s ease

  &::after
    content '\2192'
    font-size 1.2rem

// ============================================
// Blog Posts Section - Basquiat Raw Energy
// ============================================

.blog-section
  position relative
  overflow visible

.blog-posts-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
  gap 1.5rem
  margin-bottom 2rem

.blog-post-card.basquiat-card-sm
  display flex
  flex-direction column
  padding 0
  background var(--bg-paper)
  border 3px solid var(--text-ink)
  border-radius 0
  text-decoration none
  color inherit
  position relative
  min-height 200px
  box-shadow 5px 5px 0 var(--text-ink)
  transition all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)
  overflow hidden
  opacity 0
  animation blog-card-enter 0.6s ease-out forwards
  animation-delay var(--card-delay, 0s)

  &:nth-child(1)
    transform rotate(-1deg)

  &:nth-child(2)
    transform rotate(0.5deg)

  &:nth-child(3)
    transform rotate(-0.8deg)

  &:hover
    transform rotate(0deg) translateY(-6px) scale(1.02)
    box-shadow 8px 8px 0 var(--text-ink), 12px 12px 0 var(--accent-mustard)
    border-color var(--accent-terracotta)

    .post-title
      color var(--accent-terracotta)

    .post-read-more
      transform translateX(6px)
      color var(--accent-terracotta)

    .post-tag-scribble
      animation jitter 0.15s infinite
      opacity 0.5

    .post-splatter
      animation splatter-pulse 0.8s ease infinite

    .post-date-badge
      background var(--accent-terracotta)
      transform rotate(-2deg) scale(1.05)

@keyframes blog-card-enter
  0%
    opacity 0
    transform translateY(30px) rotate(-3deg)
  60%
    opacity 1
    transform translateY(-5px) rotate(1deg)
  100%
    opacity 1
    transform translateY(0) rotate(var(--card-rotate, -1deg))

// Card layer with decorations
.post-card-layer
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  pointer-events none
  z-index 1
  overflow visible

  // Noise texture
  &::before
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.04'/%3E%3C/svg%3E")

.post-splatter
  position absolute
  border-radius 50%
  pointer-events none
  transition all 0.3s ease

.splatter-a
  width 40px
  height 40px
  background radial-gradient(ellipse at 30% 30%, var(--accent-mustard) 0%, transparent 65%)
  top 8px
  right 20px
  opacity 0.2

.splatter-b
  width 35px
  height 45px
  background radial-gradient(ellipse at 60% 40%, var(--accent-sage) 0%, transparent 65%)
  bottom 40px
  left 15px
  opacity 0.18
  transform rotate(30deg)

.post-tag-scribble
  position absolute
  top 12px
  right 70px
  font-family var(--font-hand)
  font-size 0.7rem
  font-weight 400
  letter-spacing 2px
  text-transform uppercase
  color var(--text-pencil)
  opacity 0.25
  transform rotate(-8deg)
  white-space nowrap
  transition all 0.3s ease

// Card content
.post-card-content
  position relative
  z-index 2
  padding 1.5rem 1.8rem
  display flex
  flex-direction column
  flex 1

.post-date-badge
  display inline-block
  align-self flex-start
  font-family var(--font-mono-hand)
  font-size 0.8rem
  font-weight 700
  letter-spacing 1px
  text-transform uppercase
  color var(--bg-cream)
  background var(--text-ink)
  padding 0.3rem 0.7rem
  margin-bottom 1rem
  transform rotate(-1deg)
  transition all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)

.post-title
  font-family var(--font-hand)
  font-size 1.5rem
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  color var(--text-ink)
  margin 0 0 0.8rem
  line-height 1.2
  transition color 0.3s ease
  position relative

  // Raw underline accent
  &::after
    content ''
    position absolute
    bottom -4px
    left 0
    width 60%
    height 3px
    background var(--accent-mustard)
    opacity 0.4
    transform rotate(-0.5deg)
    border-radius 2px

.post-excerpt
  font-family var(--font-sketch)
  font-size 0.95rem
  font-weight 500
  color var(--text-light)
  line-height 1.6
  margin 0 0 1.2rem
  flex 1

.post-read-more
  display inline-flex
  align-items center
  gap 0.5rem
  font-family var(--font-hand)
  font-size 1rem
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  color var(--text-light)
  transition all 0.3s ease
  margin-top auto

  .arrow-icon
    transition transform 0.3s ease

  &:hover .arrow-icon
    transform translateX(4px)

// View all posts link
.view-all-posts
  display inline-flex
  align-items center
  justify-content center
  gap 0.8rem
  font-family var(--font-hand)
  font-size 1.3rem
  font-weight 400
  letter-spacing 2px
  text-transform uppercase
  color var(--text-ink)
  text-decoration none
  padding 1rem 2rem
  border 3px solid var(--text-ink)
  background var(--bg-paper)
  position relative
  margin 0 auto
  display flex
  box-shadow 4px 4px 0 var(--text-ink)
  transition all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)

  &::before
    content ''
    position absolute
    top -8px
    left -8px
    right -8px
    bottom -8px
    border 2px dashed var(--accent-mustard)
    opacity 0.4
    pointer-events none

  &:hover
    transform translateY(-3px) rotate(-1deg)
    box-shadow 6px 6px 0 var(--text-ink), 10px 10px 0 var(--accent-terracotta)
    background var(--accent-mustard)
    color var(--text-ink)

    svg
      transform translateX(4px)

  svg
    transition transform 0.3s ease

// ============================================
