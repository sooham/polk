// Hand-Drawn Landing Page Styles
// A warm, sketch-like aesthetic with love and care

// Google Fonts - import in head.ejs
// Caveat for headings (hand-lettered feel)
// Architects Daughter for body (notebook style)

// ============================================
// Lorenz Attractor Background Canvas
// ============================================

#lorenz-canvas
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1
  pointer-events none
  // Subtle blur for extra ethereal softness
  filter blur(0.5px)

// ============================================
// CSS Custom Properties
// ============================================

:root
  // Warm, paper-like colors
  --bg-cream: #faf8f3
  --bg-paper: #f7f4ed
  --text-pencil: #3d3832
  --text-ink: #2c2824
  --text-light: #6b6359
  --accent-terracotta: #c45d3a
  --accent-sage: #6b8f71
  --accent-mustard: #d4a84b
  --border-sketch: #c9c2b5
  --shadow-soft: rgba(60, 55, 45, 0.08)

  // Basquiat-inspired bold fonts
  --font-hand: 'Bebas Neue', 'Impact', sans-serif
  --font-sketch: 'Work Sans', 'Helvetica Neue', sans-serif
  --font-mono-hand: 'Space Mono', 'Courier New', monospace

// ============================================
// Base Landing Styles
// ============================================

.landing.handdrawn
  min-height 100vh
  padding 0 24px
  // Semi-transparent background to let particles show through
  background rgba(250, 248, 243, 0.65)
  position relative
  overflow-x hidden
  // Removed backdrop-filter blur for performance (was causing high GPU usage)

  // Subtle paper texture overlay
  &::before
    content ''
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E")
    pointer-events none
    z-index 0

  > *
    position relative
    z-index 1

// Paper texture div (alternative approach)
.paper-texture
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  pointer-events none
  opacity 0.4
  background radial-gradient(ellipse at 20% 30%, rgba(255, 248, 235, 0.5) 0%, transparent 50%), radial-gradient(ellipse at 80% 70%, rgba(255, 245, 225, 0.4) 0%, transparent 50%)
  z-index 0

// ============================================
// Decorative Elements (CSS-based)
// ============================================

// No SVG doodles - using CSS decorations instead

// ============================================
// Navigation
// ============================================

.landing-nav
  display flex
  justify-content center
  align-items center
  gap 0.5rem
  padding 2.5rem 0
  max-width 900px
  margin 0 auto
  border-bottom 2px dashed var(--border-sketch)
  position relative

  &::after
    content ''
    position absolute
    bottom -4px
    left 20%
    right 20%
    height 2px
    background linear-gradient(90deg, transparent, var(--border-sketch) 20%, var(--border-sketch) 80%, transparent)
    opacity 0.3

  a
    color var(--text-light)
    text-decoration none
    font-family var(--font-hand)
    font-size 1.4rem
    font-weight 400
    letter-spacing 2px
    text-transform uppercase
    padding 0.5rem 1rem
    transition all 0.3s ease
    position relative

    &::before
      content ''
      position absolute
      bottom 2px
      left 10%
      right 10%
      height 2px
      background var(--accent-terracotta)
      transform scaleX(0) rotate(-1deg)
      transition transform 0.3s ease
      border-radius 2px

    &:hover
      color var(--text-ink)
      transform rotate(-1deg)

      &::before
        transform scaleX(1) rotate(-1deg)

    &.active
      color var(--text-ink)

      &::before
        transform scaleX(1) rotate(-1deg)
        background var(--accent-sage)

.nav-dot
  width 6px
  height 6px
  background var(--border-sketch)
  border-radius 50%
  opacity 0.5

// ============================================
// Hero Section
// ============================================

.hero
  text-align center
  padding 4rem 1rem 3rem
  max-width 900px
  margin 0 auto
  position relative

.hero-portrait
  margin-bottom 2.5rem
  animation fade-in-up 0.8s ease-out
  position relative
  display flex
  justify-content center
  align-items center

.portrait-frame
  width 100px
  height 100px
  margin 0 auto
  border 3px solid var(--text-pencil)
  border-radius 50%
  display flex
  align-items center
  justify-content center
  position relative
  background var(--bg-paper)
  box-shadow 4px 4px 0 var(--border-sketch), inset 2px 2px 8px var(--shadow-soft)

  // Sketchy effect - slightly imperfect circle
  &::before
    content ''
    position absolute
    top -6px
    left -6px
    right -6px
    bottom -6px
    border 2px dashed var(--border-sketch)
    border-radius 50%
    opacity 0.5
    animation spin-slow 30s linear infinite

.portrait-initial
  font-family var(--font-hand)
  font-size 3rem
  font-weight 700
  color var(--accent-terracotta)
  line-height 1

// ============================================
// Basquiat Portrait - Raw Street Art Energy
// ============================================

.basquiat-portrait
  width 180px
  height 180px
  border-radius 0
  border 4px solid var(--text-ink)
  background var(--bg-paper)
  box-shadow 8px 8px 0 var(--text-ink), 12px 12px 0 var(--accent-mustard)
  transform rotate(-2deg)
  overflow hidden
  transition all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)

  // Noise texture overlay
  &::before
    content ''
    position absolute
    top -8px
    left -8px
    right -8px
    bottom -8px
    border 3px solid var(--accent-terracotta)
    border-radius 0
    opacity 0.6
    transform rotate(1deg)
    animation none
    z-index -1

  // Additional raw frame
  &::after
    content ''
    position absolute
    top -15px
    left -15px
    right -15px
    bottom -15px
    border 2px dashed var(--accent-mustard)
    border-radius 0
    opacity 0.4
    transform rotate(-1deg)
    z-index -2

  &:hover
    transform rotate(0deg) scale(1.03)
    box-shadow 12px 12px 0 var(--text-ink), 18px 18px 0 var(--accent-terracotta)

.portrait-image
  width 100%
  height 100%
  object-fit cover
  object-position 50% 22%
  transform scale(1.8)
  filter grayscale(20%) contrast(1.1)
  transition all 0.3s ease

  .basquiat-portrait:hover &
    filter grayscale(0%) contrast(1.15)
    transform scale(1.85)

// Crown positioned above portrait
.portrait-crown
  position absolute
  top -8px
  left 50%
  transform translateX(-50%) rotate(-3deg)
  filter drop-shadow(2px 2px 0 var(--text-ink))
  animation crown-float 4s ease-in-out infinite
  z-index 10

  .hero-portrait:hover &
    animation crown-bounce 0.5s ease infinite

// Raw paint strokes - Basquiat style
.portrait-stroke
  position absolute
  pointer-events none
  z-index 5
  transition all 0.3s ease

  .hero-portrait:hover &
    animation stroke-pulse 0.6s ease infinite

.stroke-1
  width 50px
  height 8px
  background var(--accent-terracotta)
  top 25px
  right -30px
  transform rotate(-15deg)
  opacity 0.7
  border-radius 2px

.stroke-2
  width 40px
  height 6px
  background var(--accent-mustard)
  bottom 25px
  left -25px
  transform rotate(10deg)
  opacity 0.6
  border-radius 2px

.stroke-3
  width 35px
  height 5px
  background var(--accent-sage)
  top 55%
  right -35px
  transform translateY(-50%) rotate(-5deg)
  opacity 0.5
  border-radius 2px

@keyframes stroke-pulse
  0%, 100%
    opacity 0.7
    transform rotate(-15deg) scaleX(1)
  50%
    opacity 0.9
    transform rotate(-12deg) scaleX(1.1)

// Scribbled annotations around portrait
.portrait-scribble
  position absolute
  font-family var(--font-hand)
  font-size 0.75rem
  font-weight 400
  letter-spacing 2px
  text-transform uppercase
  color var(--text-pencil)
  opacity 0.35
  pointer-events none
  z-index 10
  white-space nowrap
  transition opacity 0.3s ease

  .hero-portrait:hover &
    opacity 0.6

.scribble-right
  bottom 20px
  right -25px
  font-size 1.4rem
  transform rotate(15deg)
  color var(--accent-terracotta)

@keyframes spin-slow
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.hero-name
  font-family var(--font-hand)
  font-size 3.8rem
  font-weight 400
  letter-spacing 2px
  text-transform uppercase
  margin 0 0 0.5rem
  color var(--text-ink)
  position relative
  display inline-block
  animation fade-in-up 0.8s ease-out 0.1s both

.name-text
  position relative
  z-index 1

.underline-sketch
  position absolute
  bottom 0
  left -2%
  width 104%
  height 8px
  background linear-gradient(90deg, transparent 0%, var(--accent-terracotta) 10%, var(--accent-terracotta) 50%, var(--accent-terracotta) 90%, transparent 100%)
  opacity 0.3
  border-radius 4px
  transform rotate(-1deg)

.hero-title
  font-family var(--font-sketch)
  font-size 1.3rem
  color var(--text-light)
  margin 0.5rem 0 0.3rem
  font-weight 600
  letter-spacing 0.5px
  animation fade-in-up 0.8s ease-out 0.2s both

.hero-subtitle
  font-family var(--font-sketch)
  font-size 1.1rem
  color var(--text-light)
  margin 0.3rem 0 1.8rem
  font-weight 500
  font-style normal
  letter-spacing 0.3px
  animation fade-in-up 0.8s ease-out 0.25s both

.hero-intro
  font-family var(--font-sketch)
  font-size 1.15rem
  line-height 1.9
  font-weight 500
  color var(--text-pencil)
  margin 0
  animation fade-in-up 0.8s ease-out 0.3s both

  .highlight
    color var(--accent-terracotta)
    font-weight 700
    position relative
    white-space nowrap

@keyframes fade-in-up
  from
    opacity 0
    transform translateY(20px)
  to
    opacity 1
    transform translateY(0)

// ============================================
// Section Headings
// ============================================

.about-section
  max-width 900px
  margin 0 auto
  padding 2.5rem 0

.section-heading
  display flex
  align-items center
  gap 1rem
  margin 0 0 2rem
  position relative

.heading-text
  font-family var(--font-hand)
  font-size 2.2rem
  font-weight 400
  color var(--text-ink)
  text-transform uppercase
  letter-spacing 3px
  position relative

  &::after
    content ''
    position absolute
    bottom -4px
    left 0
    width 100%
    height 3px
    background var(--accent-mustard)
    opacity 0.6
    transform rotate(-0.5deg)
    border-radius 2px

.heading-doodle
  flex 1
  height 2px
  background repeating-linear-gradient(90deg, var(--border-sketch) 0, var(--border-sketch) 8px, transparent 8px, transparent 16px)
  opacity 0.5

// ============================================
// Experience Section with BOLD Basquiat Collage
// Neo-expressionist, raw, graffiti-inspired
// ============================================

.experience-section
  position relative
  overflow visible
  padding 2rem 0

// Section heading with crown
.basquiat-heading
  position relative

  .heading-crown
    position absolute
    top -25px
    left 0
    animation crown-wobble 3s ease-in-out infinite

@keyframes crown-wobble
  0%, 100%
    transform rotate(-5deg)
  50%
    transform rotate(5deg)

// Basquiat-style timeline
.basquiat-timeline
  position relative

  &::before
    background repeating-linear-gradient(180deg,
      var(--text-pencil) 0, var(--text-pencil) 8px,
      transparent 8px, transparent 16px,
      var(--accent-mustard) 16px, var(--accent-mustard) 20px,
      transparent 20px, transparent 28px)

// Timeline marker with crown
.basquiat-marker
  position relative
  border-width 3px
  border-color var(--text-ink) !important

  .marker-crown
    position absolute
    top -18px
    left 50%
    transform translateX(-50%)
    color var(--accent-mustard)
    opacity 0
    transition opacity 0.3s ease

.timeline-item:hover .marker-crown
  opacity 1
  animation jitter 0.15s infinite

// ============================================
// Basquiat Card - The main experience card
// ============================================

.basquiat-card
  display block
  padding 0 !important
  border 3px solid var(--text-ink) !important
  border-radius 0 !important
  background var(--bg-paper) !important
  box-shadow 6px 6px 0 var(--text-ink)
  position relative
  overflow hidden
  min-height 130px
  transition all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)

  &::before
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background linear-gradient(45deg, transparent 48%, var(--accent-mustard) 49%, var(--accent-mustard) 51%, transparent 52%), linear-gradient(-45deg, transparent 48%, var(--accent-terracotta) 49%, var(--accent-terracotta) 51%, transparent 52%)
    background-size 20px 20px
    opacity 0.03
    pointer-events none
    z-index 0

  &:hover
    transform translateX(4px) rotate(-0.5deg)
    box-shadow 10px 10px 0 var(--text-ink)
    border-color var(--accent-terracotta) !important

    .basquiat-crown
      animation crown-bounce 0.5s ease infinite

    .basquiat-scribble
      animation jitter 0.1s infinite

    .paint-splatter
      animation splatter-pulse 0.8s ease infinite

    .crossed-text
      animation strikethrough-flash 0.3s ease infinite

// Card info section - positioned above the basquiat layer
.card-info
  display flex
  flex-direction column
  justify-content center
  padding 1.5rem 2rem
  position relative
  z-index 3
  min-height 130px
  max-width 65%

.company-row
  display flex
  align-items baseline
  gap 1rem
  flex-wrap wrap
  margin-bottom 0.3rem

.company
  font-family var(--font-hand)
  font-weight 400
  color var(--text-ink)
  font-size 1.6rem
  letter-spacing 2px
  text-transform uppercase
  position relative
  grid-column unset
  grid-row unset

  // Raw underline stroke
  &::after
    content ''
    position absolute
    bottom -2px
    left 0
    width 100%
    height 4px
    background var(--accent-mustard)
    opacity 0.5
    transform rotate(-1deg) scaleX(0.9)
    transform-origin left

.period
  font-family var(--font-mono-hand)
  font-size 0.95rem
  font-weight 700
  color var(--text-light)
  opacity 1
  font-style normal
  letter-spacing 1px
  grid-column unset
  grid-row unset
  text-align left
  white-space nowrap
  position relative

  // Bracket styling like Basquiat annotations
  &::before
    content '['
    margin-right 2px
    color var(--accent-terracotta)

  &::after
    content ']'
    margin-left 2px
    color var(--accent-terracotta)

.role
  font-family var(--font-sketch)
  color var(--text-light)
  font-size 1rem
  font-weight 500
  grid-column unset
  grid-row unset

// ============================================
// Basquiat Collage Layer (full card overlay)
// ============================================

.basquiat-layer
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background linear-gradient(135deg,
    rgba(212, 168, 75, 0.08) 0%,
    rgba(250, 248, 243, 0.02) 40%,
    rgba(196, 93, 58, 0.06) 60%,
    rgba(107, 143, 113, 0.1) 100%)
  overflow visible
  z-index 1
  pointer-events none

  // Noise texture
  &::before
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.06'/%3E%3C/svg%3E")
    pointer-events none

// Company logos - now positioned on the right side of full-width layer
.collage-logo
  position absolute
  width 180px
  height auto
  object-fit contain
  top 50%
  right 35px
  transform translateY(-50%) rotate(8deg)
  opacity 0.9
  pointer-events none
  z-index 2
  filter drop-shadow(3px 3px 0 var(--accent-mustard))
  transition all 0.3s ease

.basquiat-card:hover .collage-logo
  transform translateY(-50%) rotate(12deg) scale(1.05)
  opacity 1

// Basquiat Crown - positioned in the collage area
.basquiat-crown
  position absolute
  top -5px
  right 115px
  transform rotate(-5deg)
  z-index 3
  opacity 1
  filter drop-shadow(2px 2px 0 var(--text-ink))
  animation crown-float 4s ease-in-out infinite

@keyframes crown-bounce
  0%, 100%
    transform rotate(-5deg) translateY(0)
  50%
    transform rotate(0deg) translateY(-5px)

@keyframes crown-float
  0%, 100%
    transform rotate(-5deg)
  25%
    transform rotate(-8deg) translateY(-2px)
  50%
    transform rotate(-3deg)
  75%
    transform rotate(-7deg) translateY(-1px)

// Scribbled text annotations - spread across full card
.basquiat-scribble
  position absolute
  font-family var(--font-hand)
  font-weight 700
  letter-spacing 2px
  text-transform uppercase
  color var(--text-pencil)
  opacity 0.18
  pointer-events none
  z-index 2
  white-space nowrap
  transition opacity 0.3s ease

.scribble-1
  top 8px
  right 160px
  font-size 0.8rem
  transform rotate(-8deg)

.scribble-2
  bottom 15px
  right 25px
  font-size 0.7rem
  transform rotate(5deg)

.scribble-3
  bottom 8px
  left 40%
  font-size 0.75rem
  transform rotate(-3deg)

// Symbols (copyright, stars, etc) - spread across full card
.basquiat-symbol
  position absolute
  font-family var(--font-hand)
  font-size 1.6rem
  font-weight 700
  color var(--accent-terracotta)
  opacity 0.25
  pointer-events none
  z-index 2
  transition all 0.3s ease

.symbol-1
  top 50%
  left 55%
  transform translateY(-50%) rotate(15deg)
  animation symbol-pulse 3s ease-in-out infinite

.symbol-2
  bottom 20px
  right 100px
  font-size 1.3rem
  transform rotate(-8deg)
  color var(--accent-mustard)
  animation symbol-pulse 3s ease-in-out infinite 0.5s

.symbol-3
  top 15px
  left 35%
  font-size 1.4rem
  transform rotate(20deg)
  color var(--accent-sage)
  animation symbol-pulse 3s ease-in-out infinite 1s

.symbol-4
  bottom 25px
  left 48%
  font-size 1.9rem
  transform rotate(-5deg)
  color var(--accent-sage)
  animation symbol-pulse 3s ease-in-out infinite 1.5s

@keyframes symbol-pulse
  0%, 100%
    opacity 0.35
  50%
    opacity 0.5

// Paint splatters - spread across full card for raw energy
.paint-splatter
  position absolute
  border-radius 50%
  pointer-events none
  z-index 0
  transition all 0.3s ease

.splatter-1
  width 50px
  height 50px
  background radial-gradient(ellipse at 30% 30%, var(--accent-mustard) 0%, transparent 65%)
  top 5px
  right 50px
  opacity 0.25

.splatter-2
  width 40px
  height 55px
  background radial-gradient(ellipse at 60% 40%, var(--accent-terracotta) 0%, transparent 65%)
  bottom 10px
  left 30%
  opacity 0.2
  transform rotate(45deg)

.splatter-3
  width 45px
  height 45px
  background radial-gradient(ellipse at 40% 40%, var(--accent-sage) 0%, transparent 65%)
  top 50%
  left 45%
  transform translateY(-50%)
  opacity 0.22

.splatter-4
  width 55px
  height 40px
  background radial-gradient(ellipse at 50% 50%, var(--accent-mustard) 0%, transparent 65%)
  bottom 5px
  right 120px
  opacity 0.2

.splatter-5
  width 42px
  height 50px
  background radial-gradient(ellipse at 35% 45%, var(--accent-terracotta) 0%, transparent 65%)
  top 15px
  left 52%
  opacity 0.22

.splatter-6
  width 48px
  height 48px
  background radial-gradient(ellipse at 50% 50%, var(--accent-sage) 0%, transparent 65%)
  bottom 15px
  left 60%
  opacity 0.2

@keyframes splatter-pulse
  0%, 100%
    opacity 0.35
    transform scale(1) rotate(0deg)
  50%
    opacity 0.5
    transform scale(1.15) rotate(5deg)

// Crossed out text - Basquiat signature style
.crossed-text
  position absolute
  font-family var(--font-hand)
  font-size 0.7rem
  font-weight 700
  letter-spacing 3px
  text-transform uppercase
  color var(--text-pencil)
  opacity 0.15
  pointer-events none
  z-index 2
  bottom 10px
  right 30px
  transform rotate(-2deg)
  text-decoration line-through
  text-decoration-color var(--accent-terracotta)
  text-decoration-thickness 2px

@keyframes strikethrough-flash
  0%, 100%
    opacity 0.2
    text-decoration-color var(--accent-terracotta)
  50%
    opacity 0.4
    text-decoration-color var(--text-ink)

// Jitter animation for raw, hand-drawn feel
@keyframes jitter
  0%
    transform translate(0, 0) rotate(-12deg)
  25%
    transform translate(-1px, 1px) rotate(-11deg)
  50%
    transform translate(1px, -1px) rotate(-13deg)
  75%
    transform translate(-1px, -1px) rotate(-12deg)
  100%
    transform translate(1px, 1px) rotate(-11deg)

// Card entrance animation - slide and shake
@keyframes card-enter
  0%
    opacity 0
    transform translateX(-30px) rotate(-2deg)
  60%
    opacity 1
    transform translateX(5px) rotate(0.5deg)
  80%
    transform translateX(-2px) rotate(-0.3deg)
  100%
    opacity 1
    transform translateX(0) rotate(0)

.timeline-item
  animation card-enter 0.6s ease-out forwards
  opacity 0

  &:nth-child(1)
    animation-delay 0.1s

  &:nth-child(2)
    animation-delay 0.25s

  &:nth-child(3)
    animation-delay 0.4s

// Scribble appear animation
@keyframes scribble-appear
  0%
    opacity 0
    transform rotate(-15deg) scale(0.8)
  100%
    opacity 0.25
    transform rotate(-12deg) scale(1)

.basquiat-scribble
  animation scribble-appear 0.4s ease-out forwards
  animation-delay 0.5s
  opacity 0

// ============================================
// Timeline
// ============================================

.timeline
  position relative
  padding-left 30px

  &::before
    content ''
    position absolute
    left 8px
    top 5px
    bottom 5px
    width 2px
    background repeating-linear-gradient(180deg, var(--border-sketch) 0, var(--border-sketch) 6px, transparent 6px, transparent 12px)

.timeline-item
  position relative
  margin-bottom 1.8rem
  opacity 0
  animation slide-in-left 0.5s ease-out forwards

  &:nth-child(1) { animation-delay: 0.1s }
  &:nth-child(2) { animation-delay: 0.2s }
  &:nth-child(3) { animation-delay: 0.3s }
  &:nth-child(4) { animation-delay: 0.4s }

  &:last-child
    margin-bottom 0

.timeline-marker
  position absolute
  left -26px
  top 8px
  width 14px
  height 14px
  border 2px solid var(--text-pencil)
  border-radius 50%
  background var(--bg-cream)

  &::after
    content ''
    position absolute
    top 3px
    left 3px
    width 4px
    height 4px
