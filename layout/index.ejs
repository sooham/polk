  <section class="hero">
    <div class="hero-portrait">
      <!-- Basquiat crown above portrait -->
      <svg class="portrait-crown" viewBox="0 0 60 40" width="55" height="38">
        <path d="M5 35 L12 8 L20 25 L30 5 L40 25 L48 8 L55 35" stroke="#d4a84b" stroke-width="3.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        <circle cx="12" cy="8" r="4" fill="#d4a84b"/>
        <circle cx="30" cy="5" r="4" fill="#d4a84b"/>
        <circle cx="48" cy="8" r="4" fill="#d4a84b"/>
      </svg>
      <div class="portrait-frame basquiat-portrait">
        <img src="/images/author_selfie.jpeg" alt="<%= config.author %>" class="portrait-image">
      </div>
      <!-- Raw paint strokes -->
      <div class="portrait-stroke stroke-1"></div>
      <div class="portrait-stroke stroke-2"></div>
      <div class="portrait-stroke stroke-3"></div>
      <!-- Scribbled annotation -->
      <span class="portrait-scribble scribble-right">©</span>
    </div>
    <h1 class="hero-name">
      <span class="name-text"><%= config.author %></span>
      <span class="underline-sketch"></span>
    </h1>
    <p class="hero-title">Senior Software Engineer</p>
    <p class="hero-subtitle">Never escaped vim</p>
    <p class="hero-intro">
      I tackle hard problems in Software Engineering, Hardware and Machine Learning.
      Previously at Amazon, Qualcomm, and Intel.
      I like to understand how things work at a fundamental level.
    </p>
  </section>

  <section class="about-section blog-section">
    <h2 class="section-heading basquiat-heading">
      <span class="heading-text">Latest Posts</span>
      <span class="heading-doodle"></span>
      <!-- Basquiat crown above heading -->
      <svg class="heading-crown" viewBox="0 0 60 40" width="45" height="30">
        <path d="M5 35 L12 8 L20 25 L30 5 L40 25 L48 8 L55 35" stroke="#d4a84b" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        <circle cx="12" cy="8" r="3" fill="#d4a84b"/>
        <circle cx="30" cy="5" r="3" fill="#d4a84b"/>
        <circle cx="48" cy="8" r="3" fill="#d4a84b"/>
      </svg>
    </h2>
    <div class="blog-posts-grid">
      <% site.posts.sort('date', 'desc').limit(3).each(function(post, index) { %>
        <a href="<%- url_for(post.path) %>" class="blog-post-card basquiat-card-sm" style="--card-delay: <%= index * 0.1 %>s">
          <div class="post-card-layer">
            <!-- Paint splatter decorations -->
            <div class="post-splatter splatter-a"></div>
            <div class="post-splatter splatter-b"></div>
            <!-- Scribbled tag -->
            <% if (post.tags && post.tags.length) { %>
              <span class="post-tag-scribble"><%= post.tags.toArray()[0].name %></span>
            <% } %>
          </div>
          <div class="post-card-content">
            <time class="post-date-badge"><%= date(post.date, "MMM DD") %></time>
            <h3 class="post-title"><%= post.title %></h3>
            <p class="post-excerpt">
              <%- truncate(strip_html(post.content), {length: 100, separator: ' '}) %>
            </p>
            <span class="post-read-more">
              read more
              <svg class="arrow-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </div>
        </a>
      <% }); %>
    </div>
    <a href="/archives" class="view-all-posts">
      View All Posts
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </section>

