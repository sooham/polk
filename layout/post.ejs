<%- partial('_partial/header') %>

<article class="post-page basquiat-post">
  <!-- Paper texture background -->
  <div class="post-texture"></div>

  <!-- Hero section with title -->
  <header class="post-hero">
    <!-- Basquiat crown above title -->
    <svg class="post-crown" viewBox="0 0 60 40" width="55" height="38">
      <path d="M5 35 L12 8 L20 25 L30 5 L40 25 L48 8 L55 35" stroke="#d4a84b" stroke-width="3.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="8" r="4" fill="#d4a84b"/>
      <circle cx="30" cy="5" r="4" fill="#d4a84b"/>
      <circle cx="48" cy="8" r="4" fill="#d4a84b"/>
    </svg>

    <h1 class="post-title"><%= page.title %></h1>

    <div class="post-meta">
      <time class="meta-date">
        <span class="date-label">Published</span>
        <span class="date-value"><%- date(page.date, "MMM DD, YYYY") %></span>
      </time>
      <% if (page.tags && page.tags.length) { %>
        <div class="meta-tags">
          <% page.tags.forEach(function(tag) { %>
            <a href="<%- url_for(tag.path) %>" class="meta-tag">#<%= tag.name %></a>
          <% }); %>
        </div>
      <% } %>
    </div>

    <!-- Decorative paint strokes -->
    <div class="hero-paint-stroke stroke-1"></div>
    <div class="hero-paint-stroke stroke-2"></div>
    <div class="hero-paint-stroke stroke-3"></div>
  </header>

  <!-- Main content -->
  <div class="post-body">
    <!-- Decorative side annotation -->
    <aside class="side-annotation">
      <span class="annotation-symbol">&#9670;</span>
      <span class="annotation-line"></span>
    </aside>

    <div class="post-content">
      <%- page.content %>
    </div>

    <!-- Decorative elements -->
    <div class="content-decoration">
      <div class="deco-splatter splatter-a"></div>
      <div class="deco-splatter splatter-b"></div>
    </div>
  </div>

  <!-- Footer with tags and navigation -->
  <footer class="post-footer-section">
    <div class="footer-divider">
      <span class="divider-line"></span>
      <svg class="divider-crown" viewBox="0 0 40 28" width="35" height="24">
        <path d="M4 24 L9 6 L15 17 L20 4 L25 17 L31 6 L36 24" stroke="#d4a84b" stroke-width="2.5" fill="none" stroke-linecap="round"/>
        <circle cx="9" cy="6" r="2.5" fill="#d4a84b"/>
        <circle cx="20" cy="4" r="2.5" fill="#d4a84b"/>
        <circle cx="31" cy="6" r="2.5" fill="#d4a84b"/>
      </svg>
      <span class="divider-line"></span>
    </div>

    <% if (page.tags && page.tags.length) { %>
      <div class="footer-tags">
        <span class="tags-label">Tagged</span>
        <div class="tags-list">
          <% page.tags.forEach(function(tag) { %>
            <a href="<%- url_for(tag.path) %>" class="footer-tag"><%= tag.name %></a>
          <% }); %>
        </div>
      </div>
    <% } %>

    <nav class="post-navigation">
      <a href="/archives" class="nav-link back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        <span>All Posts</span>
      </a>
      <a href="#top" class="nav-link top-link">
        <span>Back to Top</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M12 19V5M5 12l7-7 7 7"/>
        </svg>
      </a>
    </nav>
  </footer>
</article>

<%- partial('_partial/footer') %>
